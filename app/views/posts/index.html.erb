<style>
  .container {
    margin-top: 10%;
    background-color: lightblue;
    font-size: 100%;
    color: black;
    padding: 16px;
    width: 500px;
    margin: 10px;
  }
</style>
<html>
  <p id="notice"><%= notice %></p>

  <div align='center'>
  <h1>Instagram</h1>

  <%= link_to 'New Post', new_post_path %><br>
  &nbsp;<br>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <div class='container'>
          <%= link_to image_tag(post.image, style:'width:100%'), post %> <br>
          <%= post.message %>
          <br>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</html>
